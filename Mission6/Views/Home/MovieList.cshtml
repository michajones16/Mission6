@{
}

@model List<Movie>

@functions {
    private string ToYesNo(object? value)
    {
        if (value == null) return "";
        if (value is int i) return i == 1 ? "Yes" : "No";
        if (value is bool b) return b ? "Yes" : "No";
        var s = value.ToString()?.Trim().ToLowerInvariant();
        if (s == "1" || s == "true" || s == "yes" || s == "y") return "Yes";
        return "No";
    }
}

<h1>Movie List</h1>

<table class="table table-bordered">
    <thead>
        <tr class="fw-bold">
            <td>Title</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Copied To Plex</td>
            <td>Notes</td>
            <td>Actions</td>
        </tr>
    </thead>

    @foreach (var mov in Model)
    {
        <tbody>
            <tr>
                <td>@mov.Title</td>
                <td>@mov.Category.CategoryName</td>
                <td>@mov.Year</td>
                <td>@mov.Director</td>
                <td>@mov.Rating</td>
                <td>@ToYesNo(mov.Edited)</td>
                <td>@(mov.LentTo ?? "")</td>
                <td>@ToYesNo(mov.CopiedToPlex)</td>
                <td>@mov.Notes</td>
                <td>
                    <div class="d-flex">
                        <a class="btn btn-info me-2" asp-controller="Home" asp-action="Edit" asp-route-id="@mov.MovieID">Edit</a>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@mov.MovieID">Delete</a>
                    </div>
                </td>
            </tr>
        </tbody>
    }
</table>