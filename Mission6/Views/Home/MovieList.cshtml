@{
}

@model List<Movie>

<table class="table table-bordered">
    <thead>
        <tr class="fw-bold">
            <td>Title</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Copied To Plex</td>
            <td>Notes</td>
        </tr>
    </thead>

    @foreach (var mov in Model)
    {
        <tbody>
            <tr>
                <td>@mov.Title</td>
                <td>@mov.Category.CategoryName</td>
                <td>@mov.Year</td>
                <td>@mov.Director</td>
                <td>@mov.Rating</td>
                <td>@mov.Edited</td>
                <td>@mov.LentTo</td>
                <td>@mov.CopiedToPlex</td>
                <td>@mov.Notes</td>
                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@mov.MovieID">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@mov.MovieID">Delete</a></td>
            </tr>
        </tbody>
    }
</table>